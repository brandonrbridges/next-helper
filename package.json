{
	"name": "nextjs-essentials",
	"displayName": "Next.js Essentials",
	"description": "Next.js Commands and Helpers for VS Code",
	"version": "0.0.2",
	"engines": {
		"vscode": "^1.84.0"
	},
	"main": "./dist/extension.js",
	"activationEvents": [],
	"contributes": {
		"commands": [
			{
				"command": "nextjs-essentials.createComponent",
				"title": "Next.js Essentials: Create Component"
			}
		]
	},
	"icon": "dist/resources/logo.png",
	"publisher": "BrandonBridges",
	"repository": {
		"type": "git",
		"url": "https://github.com/brandonrbridges/nextjs-essentials"
	},
	"categories": [
		"Other"
	],
	"scripts": {
		"vscode:prepublish": "npm run package",
		"compile": "webpack",
		"watch": "webpack --watch",
		"package": "webpack --mode production --devtool hidden-source-map",
		"compile-tests": "tsc -p . --outDir out",
		"watch-tests": "tsc -p . -w --outDir out",
		"pretest": "npm run compile-tests && npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.84.0",
		"@types/mocha": "^10.0.3",
		"@types/node": "18.x",
		"@typescript-eslint/eslint-plugin": "^6.9.0",
		"@typescript-eslint/parser": "^6.9.0",
		"eslint": "^8.52.0",
		"glob": "^10.3.10",
		"mocha": "^10.2.0",
		"typescript": "^5.2.2",
		"ts-loader": "^9.5.0",
		"webpack": "^5.89.0",
		"webpack-cli": "^5.1.4",
		"@vscode/test-electron": "^2.3.6"
	},
	"dependencies": {
		"copy-webpack-plugin": "^11.0.0"
	}
}
